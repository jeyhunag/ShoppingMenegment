@model ShoppingMenegment.Models.Entity.Cart

@{
    ViewData["Title"] = "Create";
}
<style>
    label, h1, hr {
        color: #FF7636;
    }
</style>
<h1 class="text-center display-3">Create Cart</h1>
<hr />

<div class="mx-auto d-block">
    <form class="mx-auto" method="post" asp-action="Create">
        <div class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col">
                <label asp-for="ProductCount" for="ProductCount" class="control-label ">Product Count</label>
                <input asp-for="ProductCount" class="form-control" placeholder="Product Count">
                <span asp-validation-for="ProductCount" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group col">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
            </div>
        </div>
        <div class="form-group mt-4 text-center">
            <input type="submit" value="Create" class="btn btn-outline-success btn-lg" />
        </div>
    </form>
</div>

<div>
    <a class="btn btn-outline-info btn-lg text-decoration-none  float-end" asp-action="Index">Back to List</a>
</div>
