@model UserRoleViewModel
@{
    ViewData["Title"] = "RoleAssign";
}





<h4>AppRole</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RoleAssign" method="post">
            <input hidden asp-for="userId"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="empFullName" class="control-label"></label>
                <input disabled asp-for="empFullName" class="form-control" />
                <span asp-validation-for="empFullName" class="text-danger"></span>
            </div>

            <div class="form-group col">
                <label asp-for="roleName" class="control-label"></label>
                <select asp-for="roleName" class="form-control" asp-items="Model.Roles"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Role Assign" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


