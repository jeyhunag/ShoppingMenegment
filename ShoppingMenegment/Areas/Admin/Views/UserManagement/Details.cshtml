@model AppUser
@{
    ViewData["Title"] = "Details";
}


<h1 class="text-center mb-4 display-3">Details</h1>

<div class="container">
    <div class="row d-flex justify-content-center">
        <!--Card 1-->
        <div class=" my-2  col-md-6">
            <div class="card  h-100 text-white bg-secondary">
                <div class="card-header text-center">
                    <h1 class="display-5">Employee User</h1>
                </div>
                <div class="card-body p-0 d-flex ">
                    <ul class="list-group w-100">
                        <li class="list-group-item border-0"> @Html.DisplayNameFor(model => Model.Id) <span class="float-end">@Html.DisplayFor(model => Model.Id)</span></li>
                        <li class="list-group-item border-0"> @Html.DisplayNameFor(model => Model.UserName) <span class="float-end">@Html.DisplayFor(model => Model.UserName)</span></li>
                        <li class="list-group-item border-0"> @Html.DisplayNameFor(model => Model.Email) <span class="float-end">@Html.DisplayFor(model => Model.Email)</span></li>                       
                    </ul>
                </div>
                <div class="card-footer p-0 text-center ">
                    <a class="btn btn-info my-4 float-start btn-lg ms-3" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a class="btn btn-warning my-4  me-3 float-end btn-lg" asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

