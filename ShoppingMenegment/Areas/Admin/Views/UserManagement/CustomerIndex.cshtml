@model List<UserManagmentViewModel>

@{
    ViewData["Title"] = "CustomerIndex";
}

<h1 class="text-center">Customer</h1>

<p class="text-center">
    <a class="btn btn-primary btn-lg text-decoration-none " asp-action="EmplyoeeIndex">Create New</a>
</p>
<table class="table table-hover ms-5">
    <thead>
        <tr class="table-primary">
            <th>Id</th>
            <th>UserName</th>
            <th>Email</th>
            <th>FullName</th>
            <th>Edit| Delete | Details</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {

                <tr class="table-primary">
                    <td>@item.UserId</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.FullName</td>
                    <td>
                        <a class="btn btn-info " asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                        <a class="btn btn-warning " asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                        <a class="btn btn-danger " asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>

