@model ShoppingMenegment.Models.Entity.Product

@{
    ViewData["Title"] = "Delete";
}

<style>
    .card {
        font-family: serif;
        background-color: #B6DCDD;
        color: #2D642C;
        font-weight: bolder;
        box-shadow: 10px 10px #2D642C;
        width: 100%;
    }

    span {
        float: right;
        margin-right: 1rem;
    }

    .list-box {
        margin-left: 1rem;
        font-size: 20px;
        height: 100%;
        margin-top: 3rem;
        border: 2rem;
    }

    img {
        width: 100%;
        height: 25rem;
    }
</style>


<div class="container">
    <div class="row">
        <!--Card 1-->
        <div class="col-md-6 mx-auto d-block">
            <div class="card">
                <div class="card-header border-4 text-center">
                    <h1 class="display-4">Delete </h1>
                </div>
                <div>
                    <img src="~/ImgProduct/@Html.DisplayFor(model => model.Img)" alt="Img" class=" img-fluid">
                </div>
                <div class=" list-box">
                    <div class="my-3"> Id: <span>@Html.DisplayFor(model => model.Id)</span></div>
                    <div class="my-3"> Model: <span>@Html.DisplayFor(model => model.Model)</span></div>
                    <div> Brand:<span>@Html.DisplayFor(model => model.Brand)</span></div>
                    <div class="my-3"> Name: <span>@Html.DisplayFor(model => model.Name)</span></div>
                    <div class="mb-3"> Description: <span>@Html.DisplayFor(model => model.Description)</span></div>
                    <div class="mb-3"> UnitPrice: <span>$@Html.DisplayFor(model => model.UnitPrice)</span></div>
                    <div class="mb-3"> Product Category: <span>@Html.DisplayFor(model => model.ProductCategoryId)</span></div>
                </div>

                <form class="card-footer p-0 text-center " asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input class="btn btn-danger ms-3 my-4 float-start btn-lg" type="submit" value="Delete" />
                    <a class="btn btn-warning my-4  me-3 float-end btn-lg" asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
