@model IEnumerable<ShoppingMenegment.Models.Entity.Product>

@{
    ViewData["Title"] = "Product";
}


<h1 class="text-center display-3 " style="color:#FF7636;">Product</h1>
<p class="float-end">
    <a class="ui inverted violet  button btn-lg " asp-action="Create"><i class="hand point right icon pe-5 fs-4"></i>Create New</a>
</p>
<table class="table table-hover ms-5">
    <thead>
        <tr class="table-primary" style="color:#FF7636;">
            <th>Image</th>
            <th>Id</th>
            <th>Model</th>
            <th>Brand</th>
            <th>Name</th>
            <th>Description</th>
            <th>UnitPrice</th>
            <th>ProductCategory</th>
            <th>Edit| Delete | Details</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr class="table-primary">
                <td class="img-fluid">
                    <img src="~/ImgProduct/@item.Img" style="width:80px; height:50px; border-radius: 30%;">
                </td>
                <td>@item.Id</td>
                <td>@item.Model</td>
                <td>@item.Brand</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.UnitPrice</td>

                <td>@item.ProductCategoryId</td>
                <td>
                    <a class="btn btn-info " asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-brush me-2"></i>Edit</a> |
                    <a class="btn btn-warning " asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-file-earmark-text me-2"></i>Details</a> |
                    <a class="btn btn-danger " asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3 me-2"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
