@model RegisterFormModel
@{
    ViewData["Title"] = "Index";
    Layout = null;

}

<!doctype html>
<html class="no-js" lang="en">

<head>

    <link rel="shortcut icon" type="image/png" href="~/HomePage/assets/images/icon/favicon.ico">
    <link rel="stylesheet" href="~/HomePage/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/HomePage/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/HomePage/assets/css/themify-icons.css">
    <link rel="stylesheet" href="~/HomePage/assets/css/metisMenu.css">
    <link rel="stylesheet" href="~/HomePage/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/HomePage/assets/css/slicknav.min.css">
    <!-- amchart css -->
    <link rel="stylesheet" href="https://www.amcharts.com/lib/3/plugins/export/export.css" type="text/css" media="all" />
    <!-- others css -->
    <link rel="stylesheet" href="~/HomePage/assets/css/typography.css">
    <link rel="stylesheet" href="~/HomePage/assets/css/default-css.css">
    <link rel="stylesheet" href="~/HomePage/assets/css/styles.css">
    <link rel="stylesheet" href="~/HomePage/assets/css/responsive.css">
    <!-- modernizr css -->
    <script src="~/HomePage/assets/js/vendor/modernizr-2.8.3.min.js"></script>
</head>

<body>
    <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
    <!-- preloader area start -->
    <div id="preloader">
        <div class="loader"></div>
    </div>
    <!-- preloader area end -->
    <!-- login area start -->
    <div class="login-area login-s2">
        <div class="container">
            <div class="login-box ptb--100">
                <form method="post" asp-action="Register">
                    <div class="login-form-head">
                        <h4>Sign Up</h4>
                    </div>
                    <div class="login-form-body">
                        <div class="form-gp">
                            <label for="Name">Name</label>
                            <input asp-for="Name" type="text" id="idName">
                            <i class="ti-email"></i>
                            <div class="text-danger"></div>
                        </div>
                        <div class="form-gp">
                            <label for="Surname">Surname</label>
                            <input asp-for="Surname" type="text" id="idSurname">
                            <i class="ti-email"></i>
                            <div class="text-danger"></div>
                        </div>
                        <div class="form-gp">
                            <label for="Address">Address</label>
                            <input asp-for="Address" type="text" id="idAddress">
                            <i class="ti-email"></i>
                            <div class="text-danger"></div>
                        </div>
                        <div class="form-gp">
                            <label for="exampleInputEmail1">Username</label>
                            <input asp-for="UserName" type="text" id="exampleInputEmail1">
                            <i class="ti-email"></i>
                            <div class="text-danger"></div>
                        </div>

                        <div class="form-gp">
                            <label for="exampleInputEmail1">Email</label>
                            <input asp-for="Email" type="email" id="exampleInputEmail1">
                            <i class="ti-email"></i>
                            <div class="text-danger"></div>
                        </div>

                        <div class="form-gp">
                            <label for="exampleInputPassword1">Password</label>
                            <input asp-for="Password" type="password" id="exampleInputPassword1">
                            <i class="ti-lock"></i>
                            <div class="text-danger"></div>
                        </div>

                        <div class="form-gp">
                            <label for="exampleInputPassword1">Confirm Password</label>
                            <input asp-for="PasswordConfirm" type="password" id="exampleInputPassword1">
                            <i class="ti-lock"></i>
                            <div class="text-danger"></div>
                        </div>

                        <div class="submit-btn-area">
                            <button id="form_submit" type="submit">Submit <i class="ti-arrow-right"></i></button>
                        </div>
                        <div class="form-footer text-center mt-5">
                            <p class="text-muted"> <a asp-action="Signin">Sign up</a></p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- login area end -->
    <!-- jquery latest version -->
    <script src="~/HomePage/assets/js/vendor/jquery-2.2.4.min.js"></script>
    <!-- bootstrap 4 js -->
    <script src="~/HomePage/assets/js/popper.min.js"></script>
    <script src="~/HomePage/assets/js/bootstrap.min.js"></script>
    <script src="~/HomePage/assets/js/owl.carousel.min.js"></script>
    <script src="~/HomePage/assets/js/metisMenu.min.js"></script>
    <script src="~/HomePage/assets/js/jquery.slimscroll.min.js"></script>
    <script src="~/HomePage/assets/js/jquery.slicknav.min.js"></script>

    <!-- others plugins -->
    <script src="~/HomePage/assets/js/plugins.js"></script>
    <script src="~/HomePage/assets/js/scripts.js"></script>
</body>

</html>

